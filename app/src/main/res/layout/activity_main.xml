<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/award_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:background="@mipmap/bg"/>

    <com.example.scratchview.ScratchView
            android:id="@+id/scratch_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/award_bg"
            app:layout_constraintRight_toRightOf="@+id/award_bg"
            app:layout_constraintTop_toTopOf="@+id/award_bg"
            android:layout_marginTop="38dp"/>

    <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/award_bg"
            app:layout_constraintRight_toRightOf="@+id/award_bg"
            app:layout_constraintTop_toBottomOf="@+id/award_bg"
            android:layout_marginTop="20dp"
            android:text="再刮一次"/>

</androidx.constraintlayout.widget.ConstraintLayout>